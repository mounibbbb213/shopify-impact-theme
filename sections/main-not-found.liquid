.explorer-btn {
    background-color: #5c6bc0; /* Couleur de fond bleu */
    color: white; /* Texte en blanc */
    padding: 15px 35px; /* Espacement interne du bouton */
    border-radius: 50px; /* Coins arrondis */
    font-size: 1.2rem; /* Taille de la police */
    text-transform: uppercase; /* Mettre en majuscules */
    font-weight: bold; /* Texte en gras */
    text-decoration: none; /* Pas de soulignement */
    display: inline-block; /* Permet au bouton de s’afficher en ligne */
    transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease; /* Effet de transition fluide */
    border: 2px solid transparent; /* Bordure invisible par défaut */
    cursor: pointer; /* Curseur en forme de main */
}

.explorer-btn:hover {
    background-color: #ffb400; /* Changer la couleur de fond au survol */
    transform: scale(1.05); /* Effet de zoom léger au survol */
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* Ajout d'une ombre portée pour un effet de profondeur */
}

.explorer-btn:focus {
    outline: none; /* Retirer le contour de focus par défaut */
    box-shadow: 0 0 10px rgba(92, 107, 192, 0.6); /* Ajouter une ombre de focus subtile */
}

.explorer-btn:active {
    transform: scale(1); /* Réinitialiser l'effet de zoom lors du clic */
    background-color: #3e4d92; /* Couleur légèrement plus foncée lors du clic */
}